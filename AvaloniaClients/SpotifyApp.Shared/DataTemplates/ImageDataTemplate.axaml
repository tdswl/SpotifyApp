<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:base="clr-namespace:SpotifyApp.Shared.ViewModels.Base">
    <DataTemplate x:Key="WebImage"
                  DataType="{x:Type base:ImageViewModel}">
        <Panel>
            <Image Name="ProfImg"
                   Stretch="UniformToFill"
                   Source="{Binding Image}">
                <Interaction.Behaviors>
                    <EventTriggerBehavior EventName="Loaded">
                        <InvokeCommandAction Command="{Binding LoadImageCommand}" />
                    </EventTriggerBehavior>
                    <EventTriggerBehavior EventName="Unloaded">
                        <InvokeCommandAction Command="{Binding Cleanup}" />
                    </EventTriggerBehavior>
                </Interaction.Behaviors>
            </Image>
            <ProgressBar IsIndeterminate="True"
                         IsVisible="{Binding #ProfImg.Source, Converter={x:Static ObjectConverters.IsNull}}" />
        </Panel>
    </DataTemplate>
</ResourceDictionary>